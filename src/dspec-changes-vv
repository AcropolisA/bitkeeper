# dspec-v2
# the default dspec used by 'bk changes -vv'

"\n"
$if (:CHANGESET:) {
	"#### :DPN: ####"
} $else {
	"==== :DPN: ===="
}
"\n"
":Dy:-:Dm:-:Dd: :T::TZ:, " :USER:$if(:HOST:){@:HOST:}
$if (:FILE:) {
	" +:LI: -:LD:"
}
\n
$each(:C:) {
	"  (:C:)\n"
}
$each(:TAG:) {
	"  TAG: (:TAG:)\n"
}
$unless(:CHANGESET:) {
	":DIFFS_UP:"
}
