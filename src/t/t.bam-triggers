bk undo -qfr+
echo OK

cd "$HERE/copy"
echo $N Push w/failure triggers .....................................$NL
cd "$HERE/copy/src"
bk get $Q -e foo.c
echo delta two >> foo.c
bk delta $Q -y2 foo.c
bk commit $Q -y2 || { echo failed; exit 1; }
bk push -c0 $Q 2>ERR && {
	echo failed
	cat ERR
	exit 1
}
bk lock -s || { echo failed 2; exit 1; }
