bk pull > OUT 2>ERR || {
	echo pull failed unexpectedly
	cat OUT ERR
	exit 1
}
grep -q 'Hi there, I am a trigger.' ERR && grep -q 'Hi there to stderr' ERR || {
	echo wrong trigger outout
	cat OUT
	exit 1
}
echo OK

