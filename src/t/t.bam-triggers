exit 0
EOF
chmod +x BitKeeper/triggers/post-commit-noisy
bk edit $Q somefile
echo whatever >> somefile
bk delta $Q -ywhatever somefile
bk commit -ywhatever > OUT 2>&1 || {
	echo commit failed unexpectedly
	cat OUT
	exit 1
