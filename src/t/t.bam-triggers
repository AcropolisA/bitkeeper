bk unpull -fsq
bk pull bk://localhost:$PORT > OUT 2>ERR || {
	echo pull failed unexpectedly
	cat OUT
	exit 1
}
grep -q 'This is the pre-outgoing-noisy trigger' ERR &&
grep -q 'Hi there to stderr' ERR || {
	echo wrong trigger outout
	cat OUT
	exit 1
