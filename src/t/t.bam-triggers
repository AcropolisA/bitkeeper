echo foo > foo
bk new $Q foo
bk commit $Q -ywhatever
rm -f "$HERE/merge-commit"
cd "$HERE/merge"
echo bar > bar
bk new $Q bar
bk commit $Q -ywhatever
cd "$HERE/project"
bk pull $Q "$HERE/merge" || {
	echo should have succeeded
	exit 1
}
test -f "$HERE/merge-commit" || {
