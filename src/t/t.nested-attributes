
echo $N Test multi-line HERE file ...................................$NL
nested project
bk comps -hk | bk here set -
touch foo
bk new $Q foo
bk commit $Q -yfoo
bk get -qkp BitKeeper/etc/attr | bk _getkv - HERE > WANT
bk changes -r+ -d:ATTR_HERE: > GOT
cmpfiles WANT GOT
echo OK

echo $N Test no HERE attribute in a component .......................$NL
cd gcc
