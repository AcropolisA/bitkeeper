set -e

echo $N Create initial repository ...................................$NL
commercial project
mkdir src
cd src
echo foo > foo.c
echo bar > bar.c
echo h > h.h
bk ci $Q -i foo.c bar.c h.h
if [ ! -f SCCS/s.foo.c ]; then echo failed to create history; exit 1; fi
echo OK

echo $N  "checkout:edit with unedit" ...................................$NL
cd $HERE/project/BitKeeper/etc
bk edit $Q config
echo "checkout:edit" >> config
bk delta $Q -yedit config
cd $HERE/project/src
bk edit $Q foo.c
echo new1 >> foo.c
bk unedit foo.c
if [ ! -w foo.c ]; then echo failed; exit 1; fi
bk get $Q -p foo.c > foo.ref
cmp -s foo.ref foo.c
if [ $? -ne 0 ]; then echo failed; exit 1; fi
echo OK

echo $N checkout:edit should not touch unmodified files .............$NL
if [ $PLATFORM = "WIN32" ]; then LSOPT="--full-time"; else LSOPT=""; fi
ls -l $LSOPT foo.c > s1
sleep 2
bk unedit foo.c
ls -l $LSOPT foo.c > s2
cmp -s s1 s2 || {
	echo something changed
	diff -u s1 s2
	exit 1
}
echo OK
